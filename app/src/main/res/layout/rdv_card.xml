<?xml version="1.0" encoding="utf-8"?>
<!-- This is the card of a RDV in the recycle view -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"

    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:background="@drawable/roundedwindow">


    <TextView
        android:layout_width="match_parent"
        android:id="@+id/rdv_title"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:text="First RDV"
        android:textColor="@color/Deep_Champagne"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/rdv_people"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rdv_title"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="25dp"
        android:gravity="center"
        android:text="People"
        android:textColor="@color/Floral_White"
        android:textSize="16sp"/>




    <TextView
        android:id="@+id/rdv_start_date"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rdv_people"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="25dp"
        android:gravity="center"
        android:text="Friday, 22 january 2021"
        android:textColor="@color/Floral_White"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/rdv_start_time"
        android:layout_toEndOf="@+id/rdv_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rdv_people"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/Floral_White"
        android:gravity="center"
        android:text="21:42"
        android:textSize="16sp"/>



    <TextView
        android:id="@+id/rdv_end_date"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rdv_start_date"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="25dp"
        android:gravity="center"
        android:text="Friday, 23 january 2021"
        android:textColor="@color/Floral_White"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/rdv_end_time"
        android:layout_toEndOf="@+id/rdv_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rdv_start_date"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="04:15"
        android:textSize="16sp"
        android:textColor="@color/Floral_White"
        />

    <TextView
        android:id="@+id/rdv_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rdv_end_date"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:gravity="center|left"
        android:justificationMode="inter_word"
        android:paddingBottom="20dp"
        android:text="Note"
        android:textColor="@color/Floral_White"
        android:textIsSelectable="true"
        android:textSize="16sp"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/rdv_end_date"
        ></LinearLayout>


</RelativeLayout>
